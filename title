    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const FONT_COLOR = '#0B1A3D';
            const GRID_COLOR = '#E5E7EB';
            const PALETTE = {
                negative: '#EF4444', 
                positive: '#10B981', 
                neutral: '#6B7280', 
                potential: '#8B5CF6'
            };

            const dataStore = {
                current: {
                    label: '현재 가치',
                    desc: '현재 시점에서는 청산가치가 계속기업가치를 크게 상회하여, 사업을 청산하는 것이 경제적으로 더 유리한 상태입니다.',
                    values: {
                        goingConcern: -35296,
                        liquidation: 42097,
                        difference: -77393
                    },
                    chartData: [-35296, 42097],
                    chartColors: [PALETTE.negative, PALETTE.neutral]
                },
                potential: {
                    label: '잠재 가치 (사업 계획 성공 시)',
                    desc: '만약 사업 계획 이행을 위한 자금 확보에 성공할 경우, 계속기업가치는 83,302백만원 증가하여 청산가치를 상회하게 됩니다. 이는 회생의 가능성이 열림을 의미합니다.',
                    values: {
                        goingConcern: 48006,
                        liquidation: 42097,
                        difference: 5909
                    },
                    chartData: [48006, 42097],
                    chartColors: [PALETTE.positive, PALETTE.neutral]
                }
            };
            
            const kpiGoingConcern = document.getElementById('kpi-going-concern');
            const kpiLiquidation = document.getElementById('kpi-liquidation');
            const kpiDifference = document.getElementById('kpi-difference');

            const potentialDesc = document.getElementById('potential-desc');
            const btnCurrent = document.getElementById('btn-current');
            const btnPotential = document.getElementById('btn-potential');

            const numberFormatter = new Intl.NumberFormat('ko-KR');

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                return Array.isArray(label) ? label.join(' ') : label;
            };

            const ctx = document.getElementById('interactiveValueChart').getContext('2d');
            const interactiveChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['계속기업가치', '청산가치'],
                    datasets: [{
                        label: '기업가치 (백만원)',
                        data: dataStore.current.chartData,
                        backgroundColor: dataStore.current.chartColors,
                        borderRadius: 5,
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                title: tooltipTitleCallback,
                                label: (context) => `${context.label}: ${numberFormatter.format(context.raw)} 백만원`
                            },
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleFont: { size: 14 },
                            bodyFont: { size: 12 },
                            padding: 10,
                            cornerRadius: 4
                        }
                    },
                    scales: {
                        x: {
                            grid: { color: GRID_COLOR },
                            ticks: { 
                                color: FONT_COLOR,
                                callback: (value) => numberFormatter.format(value)
                            },
                            title: {
                                display: true,
                                text: '금액 (백만원)',
                                color: FONT_COLOR,
                                font: { size: 12, weight: 'bold'}
                            }
                        },
                        y: {
                            grid: { display: false },
                            ticks: { color: FONT_COLOR, font: { size: 14, weight: 'bold' } }
                        }
                    }
                }
            });

            function updateDisplay(scenarioKey) {
                const scenario = dataStore[scenarioKey];
                
                potentialDesc.textContent = scenario.desc;
                
                interactiveChart.data.datasets[0].data = scenario.chartData;
                interactiveChart.data.datasets[0].backgroundColor = scenario.chartColors;
                interactiveChart.options.plugins.title = { display: true, text: scenario.label, font: { size: 18 }, color: FONT_COLOR };
                interactiveChart.update();

                if(scenarioKey === 'current') {
                    btnCurrent.classList.add('bg-white', 'text-[#003F5C]', 'shadow');
                    btnCurrent.classList.remove('text-gray-600');
                    btnPotential.classList.remove('bg-white', 'text-[#003F5C]', 'shadow');
                    btnPotential.classList.add('text-gray-600');
                } else {
                    btnPotential.classList.add('bg-white', 'text-[#003F5C]', 'shadow');
                    btnPotential.classList.remove('text-gray-600');
                    btnCurrent.classList.remove('bg-white', 'text-[#003F5C]', 'shadow');
                    btnCurrent.classList.add('text-gray-600');
                }
            }
            
            function updateKpis() {
                const data = dataStore.current.values;
                kpiGoingConcern.textContent = numberFormatter.format(data.goingConcern);
                kpiLiquidation.textContent = numberFormatter.format(data.liquidation);
                kpiDifference.textContent = numberFormatter.format(data.difference);
            }

            btnCurrent.addEventListener('click', () => updateDisplay('current'));
            btnPotential.addEventListener('click', () => updateDisplay('potential'));
            
            const navLinks = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('main section[id]');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                        });
                    }
                });
            }, { rootMargin: "-50% 0px -50% 0px" });

            sections.forEach(section => observer.observe(section));

            updateKpis();
            updateDisplay('current');
        });
    </script>
</body>
</html>

